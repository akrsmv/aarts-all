
{
    "compilerOptions": {
      "incremental": true,
      "target": "ES2018",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "removeComments": true,
      "strict": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node",
        "jest"
      ],
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": [
      "**/*.d.ts",
      "dist",
      "node_modules"
    ]
  }
